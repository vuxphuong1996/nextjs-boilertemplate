{
    "presets": ["next/babel"],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./"],
                "alias": {
                    "@Actions": "./src/Actions",
                    "@Components": "./src/Components",
                    "@Configs": "./src/Configs",
                    "@Style": "./src/Styled",
                    "@Theme": "./src/Theme",
                    "@Layouts": "./src/Layouts"
                }
            }
        ],
        [
            "babel-plugin-styled-components",
            {
                "ssr": true
            }
        ]
    ]
}
